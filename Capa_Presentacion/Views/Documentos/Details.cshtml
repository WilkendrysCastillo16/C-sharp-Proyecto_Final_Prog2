            @Html.DisplayFor(modelItem => item.Usuario_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Origen_Departamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destino_Departamento)
        </td>
