@model IEnumerable<Capa_Entidad.DEPARTAMENTO>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<p>
    @Html.ActionLink("Create Nuevo Departamento", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDepartamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_Departamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Siglas)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdDepartamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_Departamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Siglas)
        </td>
